<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.poetry.dao.CourseDao">
    <select id="getCourseAll" resultType="Course">
        select * from course
    </select>
    <select id="getCourseByCourseName" resultType="Course">
        select * from course where course_name=#{courseName}
    </select>
    <select id="getCourseSectionByCourseId" resultType="CourseSection">
        select * from course_section where course_id=#{courseId}
    </select>
    <select id="getCourseCommentByCourseId" resultType="CourseComment">
        select * from course_comment where course_id=#{courseId}
    </select>
    <select id="getCourseCollectionByCourseId" resultType="CourseCollection">
        select * from course_collection where course_id=#{courseId}
    </select>
</mapper>