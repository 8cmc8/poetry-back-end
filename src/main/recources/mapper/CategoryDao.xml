<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.poetry.dao.CategoryDao">
    <select id="getChildCategoryByRootCategoryName" resultType="RootCategory">
        select * from root_category where root_category_name=#{rootCategoryName}
    </select>
    <select id="getAllRootCategory" resultType="RootCategory">
        select distinct root_category_name from root_category
    </select>
</mapper>